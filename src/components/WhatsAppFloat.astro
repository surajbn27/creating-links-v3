---
/* src/components/WhatsAppFloat.astro */
/* Format: Country code + Number (No + sign, no spaces). Example: 919900000000 */
const phoneNumber = "919945189289";
const message = "Hi, I would like to enquire about therapy services.";
const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
---

<a href={whatsappLink} class="whatsapp-float" target="_blank" aria-label="Chat on WhatsApp">
  <svg viewBox="0 0 32 32" class="whatsapp-icon">
    <path d="M16,2A13,13,0,0,0,8,25.23L2.92,27.11a1,1,0,0,0-.32,1.61l.33.25A1,1,0,0,0,3.5,29a1.06,1.06,0,0,0,.36-.06l4.76-1.78A13,13,0,1,0,16,2Z" fill="#25D366"/>
    <path d="M16.09,7.69a8.43,8.43,0,0,1,6,14.36,8.31,8.31,0,0,1-5.11,1.75,8.45,8.45,0,0,1-4.22-1.13l-3,1.13,1.13-3a8.38,8.38,0,0,1-1.2-4.42A8.43,8.43,0,0,1,16.09,7.69Z" fill="#FFF"/>
  </svg>
</a>

<style>
  .whatsapp-float {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background-color: #25D366;
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    z-index: 1000; /* Ensure it sits on top of everything */
    transition: transform 0.3s;
  }

  .whatsapp-float:hover {
    transform: scale(1.1);
  }

  .whatsapp-icon {
    width: 35px;
    height: 35px;
    fill: white;
  }
</style>