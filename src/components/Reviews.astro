---
/* =========================================
   FILE: src/components/Reviews.astro
   VERSION: 1.0
   DESCRIPTION: Displays parent testimonials from JSON
   ========================================= */

import reviewsData from '../data/reviews.json';
---

<section class="reviews-section">
  <div class="container">
    <div class="section-header">
      <h2>What Parents Say</h2>
      <p>Real stories from families we have supported.</p>
    </div>

    <div class="reviews-grid">
      {reviewsData.map((review) => (
        <div class="review-card">
          <div class="stars">{"‚≠ê".repeat(review.rating)}</div>
          <p class="review-text">"{review.review}"</p>

          <div class="reviewer-info">
            <strong>{review.parent_name}</strong>
            <span class="child-info">Parent of child ({review.child_age})</span>
            <span class="service-tag">{review.service}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .reviews-section {
    background-color: #f9fafb; /* Very light grey */
    padding: 5rem 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h2 {
    color: var(--color-primary);
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .review-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    border: 1px solid #eee;
  }

  .stars {
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .review-text {
    font-size: 1.1rem;
    color: #4b5563;
    font-style: italic;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .reviewer-info strong {
    display: block;
    color: var(--color-text-main);
    font-size: 1.1rem;
  }

  .child-info {
    display: block;
    font-size: 0.9rem;
    color: #888;
    margin-bottom: 0.5rem;
  }

  .service-tag {
    display: inline-block;
    background-color: #e0f2f1; /* Light Teal bg */
    color: var(--color-primary);
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: bold;
  }
</style>