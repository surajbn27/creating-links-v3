---
/* =========================================
   FILE: src/pages/services.astro
   VERSION: 1.1
   DESCRIPTION: Dynamic Services Page reading from JSON
   CHANGELOG:
   - v1.1: Refactored to use src/data/services.json
   - v1.0: Static HTML version
   ========================================= */

import Layout from '../layouts/Layout.astro';
import servicesData from '../data/services.json';
---

<Layout>
  <section class="page-header">
    <div class="container">
      <h1>Our Clinical Services</h1>
      <p>Holistic, evidence-based therapies tailored to your child's needs.</p>
    </div>
  </section>

  <section class="services-content">
    <div class="container">

      {servicesData.map((service, index) => (
        <>
          <div class="service-row" class:list={{ 'reverse': index % 2 !== 0 }} id={service.id}>

            <div class="text-col">
              <div class="icon-header">
                <span class="icon">{service.icon}</span>
                <h2>{service.title}</h2>
              </div>

              <p>{service.description}</p>

              <ul class="benefits-list">
                {service.benefits.map((benefit) => (
                  <li>{benefit}</li>
                ))}
              </ul>
            </div>

            <div class="img-col">
              <img src={service.image} alt={service.title} />
            </div>

          </div>

          {index !== servicesData.length - 1 && <hr class="divider" />}
        </>
      ))}

    </div>
  </section>

  <section class="cta-section">
    <div class="container center">
      <h2>Not sure which service you need?</h2>
      <p>Book an initial assessment and let our experts guide you.</p>
      <a href="/contact" class="btn-cta">Book Assessment</a>
    </div>
  </section>

</Layout>

<style>
  /* =========================================
     STYLES: Version 1.1
     ========================================= */

  .page-header {
    background-color: var(--color-primary);
    color: white;
    padding: 3rem 20px;
    text-align: center;
  }

  .services-content {
    padding: 4rem 20px;
    background-color: white;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* Service Row Layout */
  .service-row {
    display: flex;
    gap: 4rem;
    align-items: center;
    padding: 2rem 0;
  }

  /* Reverse layout for odd numbers (index 1, 3, etc.) */
  .reverse {
    flex-direction: row-reverse;
  }

  .text-col { flex: 1; }
  .img-col { flex: 1; }

  .img-col img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  /* Typography */
  .icon-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .icon { font-size: 2.5rem; }

  h2 {
    color: var(--color-primary);
    font-size: 2rem;
    margin: 0;
  }

  p {
    line-height: 1.7;
    color: #4b5563;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  /* Benefits List */
  .benefits-list {
    list-style: none;
    padding: 0;
  }

  .benefits-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #f3f4f6;
    color: var(--color-text-main);
    display: flex;
    align-items: center;
  }

  .benefits-list li::before {
    content: "â€¢";
    color: var(--color-secondary);
    font-weight: bold;
    font-size: 1.5rem;
    margin-right: 0.5rem;
    line-height: 1;
  }

  /* Divider Line */
  .divider {
    border: 0;
    height: 1px;
    background: #e5e7eb;
    margin: 2rem 0;
  }

  .cta-section {
    background-color: var(--color-bg-light);
    padding: 4rem 20px;
    text-align: center;
  }

  .btn-cta {
    background-color: var(--color-secondary);
    color: white;
    padding: 12px 30px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    display: inline-block;
    margin-top: 1rem;
  }

  .btn-cta:hover { background-color: #e7904e; }

  @media (max-width: 768px) {
    .service-row, .reverse {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }
    .icon-header { justify-content: center; }
    .benefits-list li { justify-content: center; }
  }
</style>